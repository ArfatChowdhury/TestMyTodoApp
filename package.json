  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@types/jest": "29.5.14",
    "expo": "~54.0.20",
    "expo-status-bar": "~3.0.8",
    "jest": "~29.7.0",
    "jest-expo": "~54.0.13",
    "react": "19.2.0",
    "react-native": "0.81.5",
    "react-test-renderer": "19.2.0"
  },
  "private": true,
  "devDependencies": {
    "@testing-library/react-native": "^13.3.3"
  }
